        'default' => 0,
        'size' => 'tiny',
      ),
    ),
    'primary key' => array('id'),
  );

  return $schema;
}

/**
 * Implements hook_install().
 */
function order_system_install() {
  // Add module variables for email notification.
  variable_set('order_system_email_template_subject', t('Order notification'));
  variable_set('order_system_email_template_body', t('Order notification body'));
  variable_set('order_system_email_template_from',
    t('Order notification from !sitename',
      array('!sitename' => variable_get('site_name'))
    )
  );
}

/**
 * Implements hook_uninstall().
 */
function order_system_uninstall() {
  // Remove module variables after uninstall it.
  variable_del('order_system_email_template_subject');
  variable_del('order_system_email_template_body');
  variable_del('order_system_email_template_from');
  variable_del('order_system_content_types');
}
