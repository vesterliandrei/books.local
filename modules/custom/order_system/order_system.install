      ),
      'uid' => array(
        'description' => 'The user id who placed the order.',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      ),
      'nid' => array(
        'description' => 'The node id which was ordered as a product.',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
