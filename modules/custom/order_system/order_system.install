      ),
      'timestamp' => array(
        'description' => 'Order placed timestamp.',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      ),
      'uid' => array(
        'description' => 'The user id who placed the order.',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      ),
      'nid' => array(
        'description' => 'The node id which was ordered as a product.',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      ),
      'ammount' => array(
        'description' => 'The ammount ordered.',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      ),
    ),
    'primary key' => array('id'),
  );

  $schema['order_system_placed_orders'] = array(
    'description' => 'Stores user\' all placed orders.',
    'fields' => array(
      'id' => array(
        'description' => t('The primary identifier for an order.'),
        'type' => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ),
      'timestamp' => array(
        'description' => 'Order placed timestamp.',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
